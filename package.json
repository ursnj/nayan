{
  "name": "@nayan-ui/root",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/expo",
      "**/expo/**",
      "**/@expo/**",
      "**/react-native",
      "**/react-native/**"
    ]
  },
  "version": "1.0.0",
  "description": "Reusable UI Component Libraries for React and React Native.",
  "scripts": {
    "prepare": "husky install",
    "format": "prettier --write .",
    "start:website": "yarn workspace website start",
    "build:website": "yarn workspace website build:website",
    "build:react": "yarn workspace @nayan-ui/react build",
    "build:react-native": "yarn workspace @nayan-ui/react-native build",
    "example:ios": "yarn workspace @nayan-ui/react-native-example ios",
    "example:android": "yarn workspace @nayan-ui/react-native-example android",
    "example:start": "yarn workspace @nayan-ui/react-native-example start",
    "example:prebuild": "yarn workspace @nayan-ui/react-native-example prebuild"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,css,md,json}": [
      "prettier --write"
    ]
  },
  "license": "ISC"
}
