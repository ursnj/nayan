{
  "name": "@nayan-ui/root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "version": "1.0.0",
  "description": "Reusable UI Component Libraries for React and React Native.",
  "scripts": {
    "prepare": "husky install",
    "format": "prettier --write .",
    "start:website": "yarn workspace @nayan-ui/website start",
    "build:website": "yarn workspace @nayan-ui/website build:website",
    "build:nayan": "yarn workspace @nayan-ui/react build",
    "build:cli": "yarn workspace @nayan-ui/cli build",
    "test": "yarn workspaces run test"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,css,md,json}": [
      "prettier --write"
    ]
  },
  "license": "ISC"
}
